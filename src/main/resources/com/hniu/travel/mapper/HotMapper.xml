<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hniu.travel.mapper.HotMapper">

    <select id="findHotByHid" resultType="com.hniu.travel.pojo.Product">
        SELECT
            *
        FROM
            hot_product,
            product
        WHERE
            hot_product.pid = product.pid AND
            hot_product.hid = #{hid}
    </select>
</mapper>